{% extends 'base.html.twig' %}

{% block body %}
<h1>Games Sessions</h1>

</br>

<form action="{{ path('game_session_homepage') }}">
	<input type="submit" value="Return">
</form>

</br>

<table>
	<tr>
		<td>Name Game</td>
		<td>Rol Game</td>
		<td>Master</td>
		<td>Language</td>
		<td>Standard View</td>
		<td>Access</td>
	</tr>
{% for game_session_with_owner in game_sessions_with_owner %}
    <tr>
		<td>{{ game_session_with_owner['array_gameSession'].getName() }}</td>
		<td>{{ game_session_with_owner['array_gameSession'].getRolGame() }}</td>
		<td>{{ game_session_with_owner['username'] }}</td>
		<td>{{ game_session_with_owner['array_gameSession'].getLanguage() }}</td>
		<td>{{ game_session_with_owner['array_gameSession'].getStandardView() }}</td>
		<td>
			<form action="{{ path('join_session', {'session_id': game_session_with_owner['array_gameSession'].getId()}) }}">
	    		<input type="submit" value="Join">
			</form>	
		</td>
    </tr>
{% endfor %}
</table>


